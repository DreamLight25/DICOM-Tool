#!/bin/bash
# 自动定位到脚本所在文件夹
cd "$(dirname "$0")"

echo "------------------------------------------------"
echo "🦷 正在为 DICOM 提取器配置本地环境..."
echo "------------------------------------------------"

# 检查是否安装了 pip3 [cite: 2]
if ! command -v pip3 &> /dev/null
then
    echo "❌ 错误：未检测到 Python 环境，请安装 Python 3.9 或以上版本 (推荐 3.12)"
    exit
fi

# 批量安装依赖库
pip3 install streamlit pydicom pandas pypinyin

echo "------------------------------------------------"
echo "✅ 环境配置完成！现在你可以关闭此窗口，双击启动脚本了。"
echo "------------------------------------------------"
read -p "按回车键退出..."