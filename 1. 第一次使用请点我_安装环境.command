#!/bin/bash
# 自动定位到脚本所在文件夹
cd "$(dirname "$0")"

echo "------------------------------------------------"
echo "🦷 正在为赵力俭 DICOM 提取器配置本地环境..."
echo "------------------------------------------------"

# 检查是否安装了 pip，如果没有安装会报错
if ! command -v pip3 &> /dev/null
then
    echo "❌ 错误：未检测到 Python 环境，请先安装 Python 3.12"
    exit
fi

# 批量安装依赖库
pip3 install streamlit pydicom pandas pypinyin

echo "------------------------------------------------"
echo "✅ 环境配置完成！现在你可以关闭此窗口，双击运行脚本了。"
echo "------------------------------------------------"
# 保持窗口开启以便查看结果
read -p "按回车键退出..."